<section class="reviews" id="reviews">
  <h2>{{ section.settings.title }}</h2>
  <div class="reviews-grid">
    {% for block in section.blocks %}
      <div class="review-card">
        {% render 'icon-star' %}
        <p class="review-text">{{ block.settings.text }}</p>
        <p class="review-author">â€” {{ block.settings.author }}</p>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Reviews",
  "settings": [{ "type": "text", "id": "title", "label": "Section Title", "default": "Reviews" }],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        { "type": "textarea", "id": "text", "label": "Review Text" },
        { "type": "text", "id": "author", "label": "Reviewer Name" }
      ]
    }
  ]
}
{% endschema %}
